<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#212021"
    android:orientation="vertical" >
 
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:background="#000000"
    android:layout_weight="4" >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="20dp"
	     >

	    <TextView
	        android:id="@+id/unitBarText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Unit vibration length: ms"
	        android:layout_marginBottom="20dp"
	        android:textColor="#FFFFFF"/>

	    
	    <SeekBar
	        android:id="@+id/unitSpeedBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="40dp"
	        android:background="#212021"
	        android:textColor="#FFFFFF"/>

	    <CheckBox
	        android:id="@+id/checkBox1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="40dp"
	        android:background="#212021"
	        android:onClick="tickBox"
	        android:text="        Shake to re-vibrate last phrase"
	        android:textColor="#FFFFFF" />

	    <TextView
	        android:id="@+id/messageLengthBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Maximum size input: characters"
	        android:layout_marginBottom="20dp"
	        android:textColor="#FFFFFF"/>



	    <SeekBar
	        android:id="@+id/charMax"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="40dp"
	        android:background="#212021"
	        android:textColor="#FFFFFF"/>

	    
	    <TextView
	        android:id="@+id/enableState"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Current state {/}"
	        android:layout_marginBottom="40dp"
	        android:textColor="#FFFFFF"/>


	</LinearLayout>
	</ScrollView>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >


        <TextView
	        android:id="@+id/orient"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
	        android:text="\nSettings" />
        
    </RelativeLayout>
        
</LinearLayout>
